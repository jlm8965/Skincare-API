{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        {%- comment -%} change the action {%- endcomment -%}
        {%- comment -%} add values to input fields {%- endcomment -%}
        {%- comment -%} add a back button {%- endcomment -%}
        <form action="/skincareProducts/{{skincare.id}}?_method=PUT" method="POST">
            <fieldset>
                <legend>Edit {{skincare.name}}</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the skincare product"
                    value="{{ skincare.name }}"
                >
                <label class="form-label">Formulation: </label>
                <input
                    class="form-control"
                    type="formulation"
                    name="formulation"
                    placeholder="what formualation is the skincare product?"
                    value="{{ skincare.formulation }}"
                >
                <label class="form-label">White Cast: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="whiteCast"
                    {% if skincare.whiteCast %}
                        checked
                    {% endif %}
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Edit {{skincare.name}}"
            >
        </form>
    </div>

{% endblock %}
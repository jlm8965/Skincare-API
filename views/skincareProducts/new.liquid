{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/skincareProducts" method="POST">
            <fieldset>
                <legend>Create New Skincare Product</legend>
                <label class="form-label">Name: </label>
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    placeholder="enter the name of the skincare product"
                >
                <label class="form-label">Color: </label>
                <input
                    class="form-control"
                    type="text"
                    name="formulation"
                    placeholder="what formulation is the skincare product?"
                >
                <label class="form-label">Whitecast present: </label>
                <input
                    class="form-check-input"
                    type="checkbox"
                    name="whiteCast"
                >
            </fieldset>
            <input
                class="btn btn-success"
                type="submit"
                value="Create New Skincare Product"
            >
        </form>
    </div>

{% endblock %}